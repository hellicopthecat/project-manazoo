FROM mysql:8.0.33

# 메타데이터 설정
LABEL maintainer="manazoo-team"
LABEL description="ManageZoo MySQL 데이터베이스"
LABEL version="1.0"

# 초기화 SQL 파일 복사 (데이터 자동 초기화)
COPY create_db.sql /docker-entrypoint-initdb.d/01-create_db.sql
COPY insert_db.sql /docker-entrypoint-initdb.d/02-insert_db.sql

# MySQL 기본 포트 노출 (컨테이너 내부는 항상 3306)
EXPOSE 3306
